<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.user.management.RegisterActivity">




    <EditText
        android:id="@+id/idText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="주차지역번호"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_below="@+id/idText"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_alignRight="@+id/idText"
        android:layout_alignEnd="@+id/idText"
        android:layout_alignLeft="@+id/idText"
        android:layout_alignStart="@+id/idText" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="122dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignLeft="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText" />



    <EditText
        android:id="@+id/ageText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="175dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText" />

    <EditText
        android:id="@+id/btnameText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="BT Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="175dp"
        android:layout_below="@+id/ageText"
        android:layout_alignLeft="@+id/ageText"
        android:layout_alignStart="@+id/ageText" />

    <EditText
        android:id="@+id/addressText"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:ems="10"
        android:hint="Mac Address"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="175dp"
        android:layout_below="@+id/btnameText"
        android:layout_alignLeft="@+id/btnameText"
        android:layout_alignStart="@+id/btnameText"
        android:layout_marginTop="15dp" />


    <Button

        android:id="@+id/registerButton"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:background="@drawable/button_login"
        android:clickable="true"
        android:text="회원가입"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="229dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/addressText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
